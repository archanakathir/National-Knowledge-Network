<div class="border">
<center><h2>Sign In</h2></center>

<%= form_for :user do |f| %>
  <p>
    
    <%= f.text_field :username,:placeholder=> "username" %>
  
  <p>
    <%= f.label 'password:' %><br />
    <%= f.password_field :password,:placeholder=> "password" %>
  </p>
  <p>
    <%= f.submit 'Sign In' %>&nbsp;&nbsp;&nbsp;
    <%= f.submit 'Clear Form', :type => 'reset' %>
  </p>
<% end %>


</div>
