<h1>Listing state_details</h1>

<table>
  <thead>
    <tr>
      <th>State</th>
      <th>State name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @state_details.each do |state_detail| %>
      <tr>
        <td><%= state_detail.state %></td>
        <td><%= state_detail.state_name %></td>
        <td><%= link_to 'Show', state_detail %></td>
        <td><%= link_to 'Edit', edit_state_detail_path(state_detail) %></td>
        <td><%= link_to 'Destroy', state_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

